  ],
  "difficulty": "normal",
  "meters": {
    "trust": {
      "label": "Trust",
      "start": 50,
      "min": 0,
      "max": 100
    },
    "tension": {
      "label": "Tension",
      "start": 24,
      "min": 0,
      "max": 100
    },
    "childStress": {
      "label": "Child Stress",
      "start": 10,
      "min": 0,
      "max": 100
    }
  },
  "acts": [
    {
      "title": "Act 1 — Labels & Names",
      "nodes": [
        {
          "id": "start",
          "type": "goto",
          "text": "",
          "to": "a1s1"
        },
        {
          "id": "a1s1",
          "text": "A caregiver is transitioning or coming out; relatives use inconsistent names and pronouns.",
          "type": "line"
        },
        {
          "id": "a1s2",
          "text": "You choose how to model language.",
          "choices": [
            {
              "label": "Gently correct and model the name/pronouns",
              "effects": {
                "trust": 4,
                "tension": -3
              },
              "to": "a1s3"
            },
            {
              "label": "Avoid correcting to keep peace",
              "effects": {
                "childStress": 3
              },
              "to": "a1s3"
            }
          ],
          "type": "line"
        },
        {
          "id": "a1s3",
          "text": "Your child watches whose comfort you prioritize.",
          "type": "line"
        }
      ]
    },
    {
      "title": "Act 2 — School Involvement",
      "nodes": [
        {
          "id": "a2s1",
          "text": "Forms and portals have old data. The school asks for clarification.",
          "type": "line"
        },
        {
          "id": "a2s2",
          "text": "Pick an approach.",
          "choices": [
            {
              "label": "Update records formally with correct info",
              "effects": {
                "trust": 3,
                "tension": -2
              },
              "to": "a2s3"
            },
            {
              "label": "Defer changes; handle ad-hoc",
              "effects": {
                "tension": 2
              },
              "to": "a2s3"
            }
          ],
          "type": "line"
        },
        {
          "id": "a2s3",
          "text": "Administration responds to your clarity.",
          "type": "line"
        }
      ]
    },
    {
      "title": "Act 3 — Extended Family",
      "nodes": [
        {
          "id": "a3s1",
          "text": "A grandparent refuses new language at a birthday gathering.",
          "type": "line"
        },
        {
          "id": "a3s2",
          "text": "You set a boundary.",
          "choices": [
            {
              "label": "Private ask: 'Use the name or pause the conversation.'",
              "effects": {
                "trust": 2,
                "tension": -2
              },
              "to": "a3s3"
            },
            {
              "label": "Public confrontation",
              "effects": {
                "tension": 6,
                "childStress": 5
              },
              "to": "a3s3"
            }
          ],
          "type": "line"
        },
        {
          "id": "a3s3",
          "text": "The day ends; the child tracks how safe it felt.",
          "type": "line"
        }
      ]
    }
  ]
}