            {
              "label": "Invite questions anytime",
              "to": "l3n7",
              "effects": {
                "trust": 3
              }
            },
            {
              "label": "Give a book or resource",
              "to": "l3n8",
              "effects": {
                "trust": 2
              }
            },
            {
              "label": "Change the topic",
              "to": "l3n9",
              "effects": {
                "trust": -2
              }
            }
          ]
        },
        {
          "id": "l3n7",
          "type": "line",
          "speaker": "child",
          "text": "They ask one; you answer simply.",
          "next": "l3end"
        },
        {
          "id": "l3n8",
          "type": "line",
          "speaker": "narrator",
          "text": "A resource supports the talk.",
          "next": "l3end"
        },
        {
          "id": "l3n9",
          "type": "line",
          "speaker": "narrator",
          "text": "Openness is delayed.",
          "next": "l3end"
        },
        {
          "id": "l3end",
          "type": "end",
          "summary": "Disclosure handled with varying care."
        }
      ]
    },
    {
