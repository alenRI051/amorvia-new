            {
              "label": "Make it public on social",
              "to": "l4n5",
              "effects": {
                "tension": 8,
                "childStress": 4
              }
            }
          ]
        },
        {
          "id": "l4n3",
          "type": "line",
          "speaker": "narrator",
          "text": "Support network is aligned.",
          "next": "l4end"
        },
        {
          "id": "l4n4",
          "type": "line",
          "speaker": "narrator",
          "text": "Privacy maintained.",
          "next": "l4end"
        },
        {
          "id": "l4n5",
          "type": "line",
          "speaker": "narrator",
          "text": "Unwanted attention appears.",
          "next": "l4end"
        },
        {
          "id": "l4end",
