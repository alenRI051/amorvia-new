        {
          "id": "l2n2",
          "type": "choice",
          "prompt": "Who do you involve?",
          "choices": [
            {
              "label": "Trusted family ally",
              "to": "l2n3",
              "effects": {
                "trust": 4,
                "tension": -4
              }
            },
            {
              "label": "School counselor",
              "to": "l2n4",
              "effects": {
                "trust": 3
              }
            },
            {
              "label": "No one; keep private",
              "to": "l2n5",
              "effects": {
                "tension": 2
              }
            }
          ]
        },
        {
          "id": "l2n3",
          "type": "line",
          "speaker": "ally",
          "text": "They help set inclusive language.",
          "next": "l2n6"
        },
        {
          "id": "l2n4",
          "type": "line",
          "speaker": "counselor",
          "text": "They propose age-appropriate framing.",
          "next": "l2n6"
        },
        {
          "id": "l2n5",
          "type": "line",
          "speaker": "narrator",
          "text": "You proceed alone for now.",
          "next": "l2n6"
        },
        {
          "id": "l2n6",
          "type": "choice",
          "prompt": "Co-parent sync",
          "choices": [
            {
              "label": "Share a brief joint statement",
              "to": "l2n7",
              "effects": {
                "tension": -5,
                "trust": 5
              }
            },
            {
              "label": "Inform separately",
              "to": "l2n8",
              "effects": {
                "tension": 2
              }
            },
            {
              "label": "Delay again",
              "to": "l2n9",
              "effects": {
                "trust": -2
              }
            }
          ]
        },
        {
          "id": "l2n7",
          "type": "line",
          "speaker": "ex",
          "text": "You agree on kind, simple wording.",
          "next": "l2end2"
        },
        {
          "id": "l2n8",
          "type": "line",
          "speaker": "narrator",
          "text": "Messages may conflict.",
          "next": "l2end2"
        },
        {
          "id": "l2n9",
          "type": "line",
          "speaker": "narrator",
          "text": "Uncertainty extends.",
          "next": "l2end2"
        },
        {
          "id": "l2end2",
          "type": "end",
          "summary": "Support assembled to varying degrees."
        }
      ]
    },
    {
