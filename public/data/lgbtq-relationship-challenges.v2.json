        {
          "id": "l3n2",
          "type": "choice",
          "prompt": "Setting",
          "choices": [
            {
              "label": "Calm time, favorite activity",
              "to": "l3n3",
              "effects": {
                "childStress": -4,
                "trust": 4
              }
            },
            {
              "label": "On the way to school",
              "to": "l3n4",
              "effects": {
                "childStress": 2
              }
            },
            {
              "label": "Unexpected announcement",
              "to": "l3n5",
              "effects": {
                "childStress": 4,
                "tension": 3
              }
            }
          ]
        },
        {
          "id": "l3n3",
          "type": "line",
          "speaker": "narrator",
          "text": "Conversation goes gently.",
          "next": "l3n6"
        },
        {
          "id": "l3n4",
          "type": "line",
          "speaker": "narrator",
          "text": "Time feels rushed.",
          "next": "l3n6"
        },
        {
          "id": "l3n5",
          "type": "line",
          "speaker": "narrator",
          "text": "It lands awkwardly.",
          "next": "l3n6"
        },
        {
          "id": "l3n6",
          "type": "choice",
          "prompt": "Follow-up",
