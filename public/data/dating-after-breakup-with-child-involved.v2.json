  "acts": [
    {
      "id": "act1",
      "title": "Act 1 \u2014 First Conversations",
      "nodes": [
        {
          "id": "a1_start",
          "type": "line",
          "text": "You've been on three dates with Mia/Mark. It's going well. Tonight they ask: 'Where do you see this going?'",
          "to": "a1_define_expectations"
        },
        {
          "id": "a1_define_expectations",
          "type": "choice",
          "text": "How do you set expectations?",
          "choices": [
            {
              "id": "a1_c1",
              "label": "Be clear: co\u2011parenting comes first; no child introductions for now.",
              "to": "a1_share_policy"
            },
            {
              "id": "a1_c2",
              "label": "Keep it vague and avoid the topic.",
              "to": "a1_followup_vague"
            }
          ]
        },
        {
          "id": "a1_followup_vague",
          "type": "line",
          "text": "Your date senses hesitation. That may resurface later.",
          "to": "a1_share_policy"
        },
        {
          "id": "a1_share_policy",
          "type": "choice",
          "text": "Do you inform your ex that you're seeing someone?",
          "choices": [
            {
              "id": "a1_c3",
              "label": "Yes \u2014 brief, factual message focused on co\u2011parent logistics.",
              "to": "a1_ex_reacts"
            },
            {
              "id": "a1_c4",
              "label": "No \u2014 keep it private for now.",
              "to": "a1_ex_reacts"
            }
          ]
        },
        {
          "id": "a1_ex_reacts",
          "type": "choice",
          "text": "Your ex asks if you're seeing someone.",
          "choices": [
            {
              "id": "a1_c5",
              "label": "Model respect: 'Yes, it's early.'",
              "to": "a1_end"
            },
            {
              "id": "a1_c6",
              "label": "Get defensive: 'It's none of your business.'",
              "to": "a1_end"
            }
          ]
        },
        {
          "id": "a1_end",
          "type": "goto",
          "text": "",
          "to": "act2"
        }
      ]
    },
    {
      "id": "act2",
      "title": "Act 2 \u2014 Boundaries & Introductions",
      "nodes": [
        {
          "id": "a2_start",
          "type": "line",
          "text": "Two weeks later, your date asks about meeting your child.",
          "to": "a2_intro_policy"
        },
        {
          "id": "a2_intro_policy",
          "type": "choice",
          "text": "What is your introduction policy?",
          "choices": [
            {
              "id": "a2_c1",
              "label": "Wait 3\u20136 months of stability.",
              "to": "a2_ex_coord"
            },
            {
              "id": "a2_c2",
              "label": "Early casual meet this weekend.",
              "to": "a2_ex_coord"
            }
          ]
        },
        {
          "id": "a2_ex_coord",
          "type": "choice",
          "text": "Coordinate with your ex?",
          "choices": [
            {
              "id": "a2_c3",
              "label": "Yes \u2014 propose simple guideline.",
              "to": "a2_child_talk"
            },
            {
              "id": "a2_c4",
              "label": "No \u2014 do it silently.",
              "to": "a2_child_talk"
            }
          ]
        },
        {
          "id": "a2_child_talk",
          "type": "choice",
          "text": "How do you talk to your child?",
          "choices": [
            {
              "id": "a2_c5",
              "label": "Simple script: 'This is my friend.'",
              "to": "a2_end"
            },
            {
              "id": "a2_c6",
              "label": "No prep \u2014 hope for the best.",
              "to": "a2_end"
            }
          ]
        },
        {
          "id": "a2_end",
          "type": "goto",
          "text": "",
          "to": "act3"
        }
      ]
    },
    {
      "id": "act3",
      "title": "Act 3 \u2014 Friction & Repair",
      "nodes": [
        {
          "id": "a3_start",
          "type": "line",
          "text": "Your ex hears from the child about a 'new friend' and confronts you.",
          "to": "a3_conflict"
        },
        {
          "id": "a3_conflict",
          "type": "choice",
          "text": "How do you respond?",
          "choices": [
            {
              "id": "a3_c1",
              "label": "Validate feelings + restate child\u2011first plan.",
              "to": "a3_outcomes"
            },
            {
              "id": "a3_c2",
              "label": "Blame and escalate.",
              "to": "a3_outcomes"
            }
          ]
        },
        {
          "id": "a3_outcomes",
          "type": "end",
          "text": "Scenario outcomes handled here."
        }
      ]
    }
  ]
}