            {
              "id": "a1s4c1",
              "label": "I’ll log off — this isn’t helping.",
              "tone": "self-aware · boundary-setting",
              "effects": {
                "trust": 1,
                "tension": -1,
                "childStress": 0
              },
              "to": "a1end"
            },
            {
