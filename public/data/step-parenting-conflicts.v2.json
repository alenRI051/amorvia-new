        {
          "id": "s2n1",
          "type": "line",
          "speaker": "narrator",
          "text": "A homework dispute pops up while your partner is present.",
          "next": "s2n2"
        },
        {
          "id": "s2n2",
          "type": "choice",
          "prompt": "Who steps in?",
          "choices": [
            {
              "label": "You lead; partner supports",
              "to": "s2n3",
              "effects": {
                "tension": -4,
                "trust": 4
              }
            },
            {
              "label": "Partner takes the lead",
              "to": "s2n4",
              "effects": {
                "tension": 5,
                "trust": -3
              }
            },
            {
              "label": "Let the child self‑manage",
              "to": "s2n5",
              "effects": {
                "childStress": -1,
                "trust": -1
              }
            }
          ]
        },
        {
          "id": "s2n3",
          "type": "line",
          "speaker": "partner",
          "text": "They back your cue and add encouragement.",
          "next": "s2n6"
        },
        {
          "id": "s2n4",
          "type": "line",
          "speaker": "ex",
          "text": "Later, your ex questions authority boundaries.",
          "next": "s2n6"
        },
        {
          "id": "s2n5",
          "type": "line",
          "speaker": "narrator",
          "text": "It resolves but expectations blur.",
          "next": "s2n6"
        },
        {
          "id": "s2n6",
          "type": "choice",
          "prompt": "Alignment message to co‑parent?",
          "choices": [
            {
              "label": "Share a short roles statement",
              "to": "s2n7",
              "effects": {
                "tension": -5,
                "trust": 5
              }
            },
            {
              "label": "Skip for now",
              "to": "s2n8",
              "effects": {
                "trust": -1
              }
            },
            {
              "label": "Assert partner as equal authority",
              "to": "s2n9",
              "effects": {
                "tension": 7
              }
            }
          ]
        },
        {
          "id": "s2n7",
          "type": "line",
          "speaker": "ex",
          "text": "They acknowledge boundaries; ask for consistency.",
          "next": "s2end2"
        },
        {
          "id": "s2n8",
          "type": "line",
          "speaker": "narrator",
          "text": "Uncertainty remains between homes.",
          "next": "s2end2"
        },
        {
          "id": "s2n9",
          "type": "line",
          "speaker": "ex",
          "text": "Friction rises about decision rights.",
          "next": "s2end2"
        },
        {
          "id": "s2end2",
          "type": "end",
          "summary": "Roles clarified to varying degrees."
        }
      ]
