{
  "name": "amorvia-schema-lint",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:schemas": "node validator.mjs",
    "lint:schemas:ci": "node validator.mjs --ci",
    "fix:schemas": "node tools/migrate-steps-to-nodes.v2.mjs && node tools/normalize-text-and-ids.mjs && node tools/ensure-min-choices.v2.mjs && node tools/one-shot-fix.mjs && node tools/add-missing-node-ids.mjs",
    "choices:scan": "node tools/scan-choice-effects.v2.mjs",
    "choices:hint": "node tools/rehint-choices.v2.mjs",
    "choices:hint:write": "node tools/rehint-choices.v2.mjs --write --backup"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "globby": "^14.0.2"
  }
}
