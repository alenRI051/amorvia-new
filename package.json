{
  "name": "amorvia-schema-lint",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:schemas": "ajv validate -s public/schema/scenario.v2.schema.json -d 'public/data/*.v2.json' --spec=draft2020 --strict=false",
    "lint:data": "node tools/check-data-integrity.mjs",
    "lint:schemas:ci": "node validator.mjs --ci",
    "lint:v2": "node scripts/validate-v2.js",
    "fix:v2": "node scripts/fix-v2.js",
    "fix:v2:write": "node scripts/fix-v2.js --write",
    "fix:schemas": "npm run convert:v2 && npm run lint:schemas",
    "choices:extract": "node tools/extract-effects-from-labels.v2.mjs",
    "choices:extract:write": "node tools/extract-effects-from-labels.v2.mjs --write --backup",
    "choices:scan": "node tools/scan-choice-effects.v2.mjs",
    "choices:hint": "node tools/rehint-choices.v2.mjs",
    "choices:hint:write": "node tools/rehint-choices.v2.mjs --write --backup",
    "choices:apply-map": "node tools/apply-effects-map.v2.mjs",
    "choices:apply-map:write": "node tools/apply-effects-map.v2.mjs --write --backup",
    "choices:neutral": "node tools/auto-fill-neutral-effects.v2.mjs",
    "choices:neutral:write": "node tools/auto-fill-neutral-effects.v2.mjs --write --backup",
    "dev": "http-server -p 3000 public",
    "pretest:e2e": "npm run convert:v2 && npm run lint:schemas",
    "test:e2e": "CI=1 xvfb-run -a cypress run --browser electron",
    "test:smoke": "CI=1 xvfb-run -a cypress run --browser electron --spec cypress/e2e/scenario_smoke.cy.js",
    "test:e2e:open": "xvfb-run -a cypress open",
    "serve:static": "http-server -p 3000 .",
    "setup:dev": "bash tools/setup-dev.sh",
    "convert:v2:dry": "node tools/convert-to-v2.mjs --pattern=public/data/*.v2.json",
    "convert:v2": "node tools/convert-to-v2.mjs --pattern=public/data/*.v2.json --write",
    "fix:display-text": "node tools/fix-display-text.mjs",
    "ci:lean": "npm run lint:schemas && npm run test:e2e:spec -- cypress/e2e/_smoke_all_scenarios.cy.js",
    "prepare": "husky"
  },
  "dependencies": {
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "chalk": "^5.6.2",
    "cypress": "^15.3.0",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "globby": "^15.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "minimist": "^1.2.8"
  }
}
