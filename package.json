{
  "name": "amorvia-schema-lint",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:schemas": "node validator.mjs",
    "lint:schemas:ci": "node validator.mjs --ci",
    "lint:v2": "node scripts/validate-v2.js",
    "fix:v2": "node scripts/fix-v2.js",
    "fix:v2:write": "node scripts/fix-v2.js --write",
    "fix:schemas": "node tools/migrate-steps-to-nodes.v2.mjs && node tools/normalize-text-and-ids.mjs && node tools/ensure-min-choices.v2.mjs && node tools/one-shot-fix.mjs && node tools/add-missing-node-ids.mjs",
    "choices:extract": "node tools/extract-effects-from-labels.v2.mjs",
    "choices:extract:write": "node tools/extract-effects-from-labels.v2.mjs --write --backup",
    "choices:scan": "node tools/scan-choice-effects.v2.mjs",
    "choices:hint": "node tools/rehint-choices.v2.mjs",
    "choices:hint:write": "node tools/rehint-choices.v2.mjs --write --backup",
    "choices:apply-map": "node tools/apply-effects-map.v2.mjs",
    "choices:apply-map:write": "node tools/apply-effects-map.v2.mjs --write --backup",
    "choices:neutral": "node tools/auto-fill-neutral-effects.v2.mjs",
    "choices:neutral:write": "node tools/auto-fill-neutral-effects.v2.mjs --write --backup",
    "dev": "npx serve public",
    "test:e2e": "xvfb-run -a cypress run --browser electron",
    "test:e2e:open": "xvfb-run -a cypress open",
    "serve:static": "http-server -p 3000 ."
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "cypress": "^15.3.0",
    "http-server": "^14.1.1"
  }
}
